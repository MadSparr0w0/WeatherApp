<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="УФ-ИНДЕКС И ВЛАЖНОСТЬ"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <View
                    android:id="@+id/uv_index_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_uv"/>

                <TextView
                    android:id="@+id/tv_uv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_uv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Низкий"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_uv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Низкий до конца дня"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <View
                    android:id="@+id/humidity_view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_humidity"/>

                <TextView
                    android:id="@+id/tv_humidity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66%"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Влажность"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_humidity_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выше, чем вчера"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>